<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EnterLectureDetailsActivity">
    <EditText
            android:layout_width="186dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editTextSubjectId"
            android:hint="Enter Subject id"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerCourseId" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button

            android:text="Save"
            android:layout_width="183dp"
            android:layout_height="53dp"
            android:id="@+id/buttonCreateLecture" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/editTextSubjectId"/>
    <Spinner
            android:contentDescription="Select Day"
            android:layout_width="238dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/spinnerDay" android:layout_marginTop="96dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.526"/>

    <Spinner
        android:id="@+id/spinnerStartTime"
        android:layout_width="246dp"
        android:layout_height="51dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerDay" />

    <Spinner
            android:layout_width="220dp"
            android:layout_height="51dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/spinnerEndTime" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerStartTime"/>
    <Spinner
            android:layout_width="222dp"
            android:layout_height="45dp"
            android:id="@+id/spinnerCourseId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/spinnerEndTime"/>
</androidx.constraintlayout.widget.ConstraintLayout>