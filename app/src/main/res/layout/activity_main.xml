<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassInformationActivity"
    android:background="@color/lightBackground"


    >
    <EditText
        android:hint="Enter Email"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextUserEmail" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextLoginHeading" app:layout_constraintHorizontal_bias="0.496"/>
    <EditText
        android:hint="Enter Password"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextUserPassword" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextUserEmail"/>
    <TextView
        android:layout_width="184dp"
        android:layout_height="47dp"
        android:text="SIGN IN"
        android:ems="10"
        android:gravity="center"
        android:id="@+id/editTextLoginHeading" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="148dp" app:layout_constraintHorizontal_bias="0.497" android:textSize="24sp"/>
    <Button
        android:gravity="center"
        android:text="Submit"
        android:layout_width="137dp"
        android:layout_height="54dp"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/buttonLogin" android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextUserPassword" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>